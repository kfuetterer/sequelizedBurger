<div class="jumbotron">
  <h1><b>Eat-Da-Burger!</b></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers!</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li class="list-group-item list-group-item-success">
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="sleepy" value="true">
                <button type="submit" class="btn-default">Devour It!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Devoured Burgers!</h2>

      <ul class="list-group">
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="list-group-item list-group-item-danger">
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="addBox">
  <h2 id="addHeader">Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group" id="addBurgerForm">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="burger_name">
    </div>

  <div style="text-align: center">
    <button id="addButton" type="submit" class="btn-default">Add a Burger</button>
  </div>
</div>
</form>
